<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/search_bar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/search_bg</item>
    </style>

    <style name="AppTheme.NoActionbar.white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/search_bg</item>
        <item name="colorPrimaryDark">@color/search_bar</item>
        <item name="colorAccent">@color/white_700</item>
    </style>

    <style name="polytechnic_tab_text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="android:gravity">center</item>
        <item name="paddingEnd">@dimen/_10dp</item>
        <item name="paddingStart">@dimen/_10dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorHeight">@dimen/_3dp</item>
        <item name="tabPaddingStart">@dimen/_12dp</item>
        <item name="tabPaddingEnd">@dimen/_12dp</item>
        <item name="tabTextAppearance">@style/polytechnic_tab_text</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="background">@color/search_bar</item>
        <item name="tabTextColor">@color/white_300</item>
        <item name="tabGravity">center</item>
    </style>


    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerSize">12%</item>
    </style>

    <style name="CardHeaderText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20dp</item>
    </style>


    <style name="navigation_menu_text">
        <item name="android:layout_marginTop">@dimen/_15dp</item>
        <item name="android:textColor">#0B0A0A</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- initial button  -->

    <style name="initial_button">

        <item name="android:textColor">#FFF</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/login_btn_bg</item>
        <item name="android:textSize">@dimen/_13dp</item>

    </style>

    <!-- CardView  -->
    <style name="CardView_Text">
        <item   name="android:textSize">@dimen/_16dp</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="color">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Button_outlined">
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/outline_button_fent_black</item>
        <item name="android:textSize">@dimen/_13dp</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/search_bar</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:paddingBottom">@dimen/_7dp</item>
    </style>

</resources>
