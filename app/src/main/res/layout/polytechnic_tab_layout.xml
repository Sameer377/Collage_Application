<?xml version="1.0" encoding="utf-8"?>


<HorizontalScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@color/search_bar"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_10dp"
                    android:weightSum="9">

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Home"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/poly_tv_about"
                        android:onClick="onClick"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="About Us"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_management"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Management"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_principle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Principle's View"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_acadmic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Academic"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_activities"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Activities"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_student"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Student"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_media"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Media"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/poly_tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Contact Us"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </HorizontalScrollView>