<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.college.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/agppi_logo"
        android:label="AGPI"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.College"
        tools:targetApi="31">
        <activity
            android:theme="@style/AppTheme.NoActionbar.white"
            android:name=".polytechnic.initials.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".polytechnic.initials.Login"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionbar.white" />
        <activity
            android:name=".Technology"
            android:exported="false" />
        <activity
            android:name=".polytechnic.Polytechnic"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionbar.white">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>